<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <%- include('../views/partials/header.ejs') %>

    <div class="container mt-3">
        <!-- <button type="button" onclick="getLocation()">Please Click to Get Your Location</button> -->
        <div id="latitude" hidden></div>
        <div id="longitude" hidden></div>
        <div class="card-deck" id="card" style="display: none;">
            <div id="length" hidden><%=sightings.length%></div>
            <% for(var i=0; i<sightings.length; i++) { %>
            <div class="card mt-2" style="min-width: 30vh; max-width: 16rem;" id="<%= sightings[i]._id %>">
                <img class="card-img-top" src="<%= sightings[i].img %>" alt="bird image">
                <div class="card-body">
                    <a class="card-title h5" href="/sighting/<%= sightings[i]._id %>">
                        <%= sightings[i].nickname %>
                    </a>
                    <div class="card-text">
                        <p>Date and Time: <%= sightings[i].dateTimeSeen.toLocaleString() %></p>
                        <p>Identification: <%= sightings[i].identification %></p>
                        <p>Nickname: <%= sightings[i].nickname %></p>
                        <p id="lat<%=i%>" hidden><%=sightings[i].location.coordinates[1]%></p>
                        <p id="lng<%=i%>" hidden><%=sightings[i].location.coordinates[0]%></p>
                        <p id="id<%=i%>" hidden><%= sightings[i]._id %></p>
                        <p id="dis<%=i%>" hidden></p>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    </div>

    <%- include('../views/partials/footer.ejs') %>
    <script src="/javascripts/nearbyMap.js"></script>
    <script>


    </script>
</body>

</html>