<body>
  <%- include('../views/partials/header.ejs') %>
  <div class="container mt-4">
    <div class="card-deck">
      <% sightings.forEach(function(sighting) { %>
      <div class="card" style="max-width: 18rem;">
        <img class="card-img-top" src="<%= sighting.img %>" alt="bird image">
        <div class="card-body">
          <a class="card-title h5" href="/sighting/<%= sighting._id %>">Bird Name</a>
          <div class="card-text">
            <p>Date and Time: <%= sighting.dateTimeSeen.toLocaleString() %></p>
            <p>Identification: <%= sighting.identification %></p>
            <p>Nickname: <%= sighting.nickname %></p>
          </div>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

